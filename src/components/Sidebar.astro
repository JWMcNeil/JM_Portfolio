---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import jamieAvatar from '../assets/pictures/Jamie_circle_100x100.webp';
---

<header >
    <!-- Mobile Burger Button -->
    <div class="burger fixed right-0 z-20 m-4 sm:hidden">
        <div class="bar1 h-1 w-10 my-1.5 bg-smoke-white duration-300"></div>
        <div class="bar2 h-1 w-10 my-1.5 bg-smoke-white duration-300"></div>
        <div class="bar3 h-1 w-10 my-1.5 bg-smoke-white duration-300"></div>
    </div>
    <nav class="sidebar fixed -translate-x-full sm:block sm:translate-x-0  z-10 h-full w-[120px] border-r border-solid border-smoke-white/10 transition-transform duration-300 ease-in-out">

        <!-- Sidebar content and links -->
        <div class=" flex flex-col h-full w-full place-content-between bg-black">
            <!-- Avatar -->
            <div class="flex place-content-center items-center w-[119px] h-[120px] border-b border-solid border-smoke-white/10">
            <Image src={jamieAvatar} alt="Jamie" width="100" height="100"/></div>
            <!-- Links container -->
            <div class="h-1/3 w-[119px] border-t border-b border-solid border-smoke-white/20 text-smoke-white font-hind ">
                <div class="flex items-center place-content-center h-1/3 border-b border-solid border-smoke-white/10">
                    <HeaderLink href="/">Home</HeaderLink>
                </div>
                <div class="flex items-center place-content-center h-1/3 border-b border-solid border-smoke-white/10">
                    <HeaderLink href="/about">About</HeaderLink>
                </div>
                <div class=" flex items-center place-content-center h-1/3 ">
                    <HeaderLink href="/blog">Blog</HeaderLink>
                </div>
            </div>
            <!-- Social @ email container -->
            <div class="flex flex-col place-content-center items-center h-[120px] w-[120px] ">
                <a href="https://github.com/JWMcNeil" target="_blank">
			<span class="sr-only">Go to Jamie's repo</span>
			<svg class="fill-smoke-white" viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" astro-icon="social/github"
				><path
					d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
				></path></svg
			>
		</a>
        <a class="text-xs font-hind text-smoke-white font-light pt-2" href="jamie@chaosandnox.com">Get in touch!</a>   
            </div>
        </div>

    </nav>
</header>


<script>
    document.addEventListener('astro:page-load', () => {


        const burger = document.querySelector('.burger');
        const sidebar = document.querySelector('.sidebar');
        const bar1 = document.querySelector('.bar1');
        const bar2 = document.querySelector('.bar2');
        const bar3 = document.querySelector('.bar3');
    
        // Function to toggle the sidebar and burger menu
        const toggleSidebar = () => {
            
            if (sidebar?.classList.contains('translate-x-0')) {
                // Sidebar is open, so close it
                sidebar.classList.remove('translate-x-0');
                bar1?.classList.remove('transform', 'translate-y-1.5', '-rotate-45');
                bar2?.classList.remove('hidden');
                bar3?.classList.remove('transform', '-translate-y-1', 'rotate-45');
            } else {
                // Sidebar is closed, so open it
                sidebar?.classList.add('translate-x-0');
                bar1?.classList.add('transform', 'translate-y-1.5', '-rotate-45');
                bar2?.classList.add('hidden');
                bar3?.classList.add('transform', '-translate-y-1', 'rotate-45');
            }
        };
    
        function initializeBurgerMenu() {
        const burger = document.querySelector('.burger');
        burger?.addEventListener('click', (event) => {
            // Stop event propagation
            event.stopPropagation();
            // Toggle sidebar
            toggleSidebar();
        });
      }
      initializeBurgerMenu();
      // Reinitialize burger menu event listener on page load
    //   document.addEventListener('astro:page-load', () => {
    //     // Reinitialize burger menu event listener
    //     initializeBurgerMenu();
    //   });
    });
</script>